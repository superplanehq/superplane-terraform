# -----------------------------------------------------------------------------
# Required Variables
# -----------------------------------------------------------------------------

# Domain name for SuperPlane (configure DNS after deployment)
domain_name = "superplane.example.com"

# Email for Let's Encrypt certificate notifications
letsencrypt_email = "admin@example.com"

# Elastic IP allocation ID (create with: aws ec2 allocate-address --domain vpc)
eip_allocation_id = "eipalloc-xxxxxxxxxxxxxxxxx"

# -----------------------------------------------------------------------------
# Optional Variables - AWS Region
# -----------------------------------------------------------------------------

# region             = "us-east-1"
# availability_zones = ["us-east-1a", "us-east-1b"]

# -----------------------------------------------------------------------------
# Optional Variables - EKS Cluster
# -----------------------------------------------------------------------------

# cluster_name    = "superplane"
# cluster_version = "1.31"
# node_count      = 2
# instance_type   = "t3.medium"

# -----------------------------------------------------------------------------
# Optional Variables - RDS
# -----------------------------------------------------------------------------

# db_instance_identifier = "superplane-db"
# db_engine_version      = "17"
# db_instance_class      = "db.t3.medium"
# db_allocated_storage   = 20
# db_name                = "superplane"
# db_username            = "postgres"

# Optionally provide a database password (otherwise one will be generated)
# db_password = "your-secure-password"

# -----------------------------------------------------------------------------
# Optional Variables - SuperPlane
# -----------------------------------------------------------------------------

# superplane_namespace = "superplane"
# superplane_image_tag = "stable"  # Options: stable, beta, or specific version like v0.4

# -----------------------------------------------------------------------------
# Optional Variables - Network
# -----------------------------------------------------------------------------

# vpc_cidr = "10.0.0.0/16"
